{
  "name": "Al-Huda (Emerald Night)",
  "version": "1.0.0",
  "description": "Premium Islamic design system for the Quran Habit Builder app",
  
  "colors": {
    "primary": {
      "main": "#13ec5b",
      "light": "#4ff285",
      "dark": "#0bc948",
      "glow": "rgba(19, 236, 91, 0.3)",
      "glowStrong": "rgba(19, 236, 91, 0.5)"
    },
    "accent": {
      "gold": "#d4af37",
      "goldLight": "#e8c963",
      "orange": "#f97316"
    },
    "background": {
      "dark": "#102216",
      "light": "#f6f8f6"
    },
    "surface": {
      "dark": "#1c271f",
      "darkElevated": "#23482f",
      "light": "#ffffff",
      "lightElevated": "#f8faf8"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#9db9a6",
      "tertiary": "#92c9a4",
      "muted": "rgba(255, 255, 255, 0.4)",
      "onPrimary": "#102216",
      "darkPrimary": "#111827",
      "darkSecondary": "#6b7280"
    },
    "border": {
      "dark": "rgba(255, 255, 255, 0.05)",
      "darkHighlight": "rgba(255, 255, 255, 0.1)",
      "accent": "#326744",
      "light": "#e5e7eb"
    },
    "semantic": {
      "success": "#13ec5b",
      "warning": "#f59e0b",
      "error": "#ef4444",
      "info": "#3b82f6"
    }
  },

  "typography": {
    "fonts": {
      "display": {
        "family": "Lexend",
        "fallback": "sans-serif",
        "weights": [400, 500, 600, 700, 800]
      },
      "body": {
        "family": "Manrope",
        "fallback": "sans-serif",
        "weights": [400, 500, 600, 700]
      },
      "arabic": {
        "family": "Noto Sans Arabic",
        "fallback": "serif",
        "weights": [400, 700],
        "direction": "rtl",
        "lineHeight": 1.8
      }
    },
    "scale": {
      "xs": "10px",
      "sm": "12px",
      "base": "14px",
      "md": "16px",
      "lg": "18px",
      "xl": "20px",
      "2xl": "24px",
      "3xl": "30px",
      "4xl": "36px",
      "5xl": "48px"
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.8
    },
    "letterSpacing": {
      "tight": "-0.02em",
      "normal": "0",
      "wide": "0.05em",
      "wider": "0.1em"
    }
  },

  "spacing": {
    "unit": 4,
    "scale": {
      "0": "0px",
      "1": "4px",
      "2": "8px",
      "3": "12px",
      "4": "16px",
      "5": "20px",
      "6": "24px",
      "8": "32px",
      "10": "40px",
      "12": "48px",
      "16": "64px"
    }
  },

  "borderRadius": {
    "none": "0px",
    "sm": "4px",
    "default": "8px",
    "md": "12px",
    "lg": "16px",
    "xl": "20px",
    "2xl": "24px",
    "3xl": "32px",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px rgba(0, 0, 0, 0.05)",
    "default": "0 4px 6px rgba(0, 0, 0, 0.1)",
    "md": "0 6px 12px rgba(0, 0, 0, 0.15)",
    "lg": "0 10px 25px rgba(0, 0, 0, 0.2)",
    "primaryGlow": "0 0 15px rgba(19, 236, 91, 0.3)",
    "primaryGlowStrong": "0 0 30px rgba(19, 236, 91, 0.4)",
    "buttonGlow": "0 10px 30px rgba(19, 236, 91, 0.25)",
    "progressGlow": "0 0 10px rgba(19, 236, 91, 0.5)"
  },

  "animations": {
    "durations": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easings": {
      "default": "ease-out",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)",
      "smooth": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },

  "components": {
    "button": {
      "primary": {
        "background": "#13ec5b",
        "text": "#102216",
        "borderRadius": "16px",
        "padding": "16px 24px",
        "shadow": "0 10px 30px rgba(19, 236, 91, 0.25)",
        "hoverScale": 0.98
      },
      "secondary": {
        "background": "transparent",
        "text": "#ffffff",
        "border": "1px solid rgba(255, 255, 255, 0.1)",
        "borderRadius": "12px"
      }
    },
    "card": {
      "background": "#1c271f",
      "border": "1px solid rgba(255, 255, 255, 0.05)",
      "borderRadius": "12px",
      "padding": "20px"
    },
    "input": {
      "background": "#1c271f",
      "border": "1px solid rgba(255, 255, 255, 0.1)",
      "borderRadius": "8px",
      "padding": "12px 16px",
      "focusBorder": "#13ec5b"
    },
    "bottomNav": {
      "background": "rgba(16, 34, 22, 0.8)",
      "blur": "12px",
      "height": "80px"
    },
    "progressBar": {
      "background": "#3b5443",
      "fill": "#13ec5b",
      "height": "12px",
      "borderRadius": "9999px"
    }
  },

  "patterns": {
    "islamicDots": {
      "backgroundColor": "#102216",
      "backgroundImage": "radial-gradient(#1c271f 1px, transparent 1px)",
      "backgroundSize": "20px 20px"
    }
  }
}
